<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--Signup Text -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/appTheme"
        android:textSize="16sp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="@+id/activity_signup_page01_fullnameEdit"
        app:layout_constraintTop_toTopOf="parent" />

    <!--be part of our community text -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="tell us more about you"
        android:textColor="@color/appTheme"
        app:layout_constraintStart_toStartOf="@+id/activity_signup_page01_fullnameEdit"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <!--- username text box-->
    <EditText
        android:id="@+id/activity_signup_page01_fullnameEdit"
        android:textSize="14sp"
        android:inputType="textPersonName"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_sign_up_buttons"
        android:hint="fullname"
        android:textCursorDrawable="@null"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textColorHint="#5E5E5E"
        android:textColor="#5E5E5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/activity_signup_page01_fullnameCheck"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/ic_wrong"
        app:layout_constraintBottom_toBottomOf="@+id/activity_signup_page01_fullnameEdit"
        app:layout_constraintStart_toStartOf="@+id/activity_signup_page01_fullnameEdit"
        app:layout_constraintTop_toTopOf="@+id/activity_signup_page01_fullnameEdit" />

    <TextView
        android:id="@+id/activity_signup_page01_fullnameErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_signup_page01_fullnameEdit"
        app:layout_constraintEnd_toEndOf="@+id/activity_signup_page01_fullnameEdit" />

    <!--- gender selection box-->
    <Spinner
        android:id="@+id/activity_signup_page01_genderEdit"
        android:textSize="14sp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_sign_up_buttons"
        android:textCursorDrawable="@null"
        android:textColor="#5E5E5E"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_signup_page01_fullnameEdit" />

    <!--- education selection box-->
    <Spinner
        android:id="@+id/activity_signup_page01_educationEdit"
        android:textSize="14sp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_sign_up_buttons"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textColor="#5E5E5E"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_signup_page01_genderEdit" />

    <!--- username text box-->
    <EditText
        android:id="@+id/activity_signup_page01_ageEdit"
        android:textSize="14sp"
        android:inputType="number"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_sign_up_buttons"
        android:hint="age"
        android:textCursorDrawable="@null"
        android:maxLines="1"
        android:paddingLeft="25dp"
        android:textColorHint="#5E5E5E"
        android:textColor="#5E5E5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_signup_page01_educationEdit" />

    <ImageView
        android:id="@+id/activity_signup_page01_ageCheck"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/ic_wrong"
        app:layout_constraintBottom_toBottomOf="@+id/activity_signup_page01_ageEdit"
        app:layout_constraintStart_toStartOf="@+id/activity_signup_page01_ageEdit"
        app:layout_constraintTop_toTopOf="@+id/activity_signup_page01_ageEdit" />

    <TextView
        android:id="@+id/activity_signup_page01_ageErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_signup_page01_ageEdit"
        app:layout_constraintEnd_toEndOf="@+id/activity_signup_page01_ageEdit" />

    <!--- username text box-->
    <EditText
        android:id="@+id/activity_signup_page01_mobileEdit"
        android:textSize="14sp"
        android:inputType="number"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_sign_up_buttons"
        android:hint="phone number"
        android:textCursorDrawable="@null"
        android:maxLines="1"
        android:paddingLeft="25dp"
        android:textColorHint="#5E5E5E"
        android:textColor="#5E5E5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_signup_page01_ageEdit" />

    <ImageView
        android:id="@+id/activity_signup_page01_mobileCheck"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/ic_wrong"
        app:layout_constraintBottom_toBottomOf="@+id/activity_signup_page01_mobileEdit"
        app:layout_constraintStart_toStartOf="@+id/activity_signup_page01_mobileEdit"
        app:layout_constraintTop_toTopOf="@+id/activity_signup_page01_mobileEdit" />

    <TextView
        android:id="@+id/activity_signup_page01_mobileErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_signup_page01_mobileEdit"
        app:layout_constraintEnd_toEndOf="@+id/activity_signup_page01_mobileEdit" />

    <CheckBox
        android:id="@+id/activity_signup_page01_checkBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/appTheme"
        android:buttonTint="@color/appTheme"
        app:layout_constraintStart_toStartOf="@+id/activity_signup_page01_mobileEdit"
        app:layout_constraintTop_toBottomOf="@+id/activity_signup_page01_mobileEdit" />

    <TextView
        android:id="@+id/activity_signup_page01_termsAndConditionEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree with the terms and conditions"
        android:textSize="13sp"
        android:textColor="@color/hyperlinkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_signup_page01_checkBox"
        app:layout_constraintStart_toEndOf="@+id/activity_signup_page01_checkBox"
        app:layout_constraintTop_toTopOf="@+id/activity_signup_page01_checkBox" />

    <Button
        android:id="@+id/activity_signup_page01_signupButton"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_orange_button_white"
        android:stateListAnimator="@null"
        android:text="SIGN UP"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_signup_page01_termsAndConditionEdit" />


</androidx.constraintlayout.widget.ConstraintLayout>