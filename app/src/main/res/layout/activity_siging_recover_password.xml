<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--Signup Text -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Recover"
        android:textColor="@color/appTheme"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <!--be part of our community text -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="upon clicking the send recovery email link\nwe will send you an email to recover your\n password"
        android:textColor="@color/appTheme"
        app:layout_constraintStart_toStartOf="@+id/activity_signin_recover_sendEmail"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <EditText
        android:id="@+id/activity_signin_recover_emailEdit"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/background_sign_up_buttons"
        android:hint="email"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:focusable="false"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/activity_signin_recover_sendEmail"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_gray_button_white"
        android:stateListAnimator="@null"
        android:text="Send recovery email"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_signin_recover_emailEdit" />

    <Button
        android:id="@+id/activity_signin_recover_cancelButton"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_orange_button_white"
        android:stateListAnimator="@null"
        android:text="CANCEL"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_signin_recover_sendEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>